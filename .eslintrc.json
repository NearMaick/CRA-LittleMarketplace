{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "settings": {
        "react": {
            "createClass": "createReactClass", 
            "pragma": "React",  
            "fragment": "Fragment",  
            "version": "detect", 
            "flowVersion": "0.53" 
        }
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
    }
}
